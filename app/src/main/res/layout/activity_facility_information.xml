<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    tools:context=".function.manage.activity.FacilityInformationActivity">

    <include layout="@layout/layout_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <com.jingkai.asset.widget.view.CustomTopView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                app:title="设备设施基本信息"></com.jingkai.asset.widget.view.CustomTopView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_15"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_equipment_detail_number"
                    style="@style/text_15_wrap_black"
                    android:text="设备编号" />

                <TextView
                    android:id="@+id/tv_equipment_detail_classify"
                    style="@style/text_15_wrap_black"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="设备分类" />

                <TextView
                    android:id="@+id/tv_equipment_detail_name"
                    style="@style/text_15_wrap_black"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="设备名称" />

                <TextView
                    android:id="@+id/tv_equipment_detail_location"
                    style="@style/text_15_wrap_black"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="位置" />

                <TextView
                    android:id="@+id/tv_equipment_detail_status"
                    style="@style/text_15_wrap_black"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="设备状态" />

                <TextView
                    android:id="@+id/tv_equipment_detail_brand"
                    style="@style/text_15_wrap_black"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="品牌" />

                <TextView
                    android:id="@+id/tv_equipment_detail_firtStartTime"
                    style="@style/text_15_wrap_black"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="首次启动日期" />

                <TextView
                    android:id="@+id/tv_equipment_detail_registerTime"
                    style="@style/text_15_wrap_black"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="登记日期" />

                <TextView
                    android:id="@+id/tv_equipment_detail_repairExpirationDate"
                    style="@style/text_15_wrap_black"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="报修截止日期" />

                <TextView
                    android:id="@+id/tv_equipment_detail_durable_years"
                    style="@style/text_15_wrap_black"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="使用年限" />

                <TextView
                    android:id="@+id/tv_equipment_detail_scrap_year"
                    style="@style/text_15_wrap_black"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="强制报废年限" />

                <TextView
                    android:id="@+id/tv_equipment_detail_supplier_phone"
                    style="@style/text_15_wrap_black"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="供应商联系方式" />

                <TextView
                    android:id="@+id/tv_equipment_detail_purchasePrice"
                    style="@style/text_15_wrap_black"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="采购价格(元)" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_equipment_detail_dynamic_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/gray_light_color"></View>

                <com.jingkai.asset.widget.view.CustomTopView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    app:title="设备设施动态信息"></com.jingkai.asset.widget.view.CustomTopView>


                <com.jingkai.asset.widget.MeasureRecyclerView
                    android:id="@+id/mrv_standing_book_detail_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"></com.jingkai.asset.widget.MeasureRecyclerView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>