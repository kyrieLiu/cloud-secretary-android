<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light_color"
    tools:context=".function.manage.activity.HousingDetailActivity">

    <include layout="@layout/layout_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_15"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_20">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_housing_detail_number"
                style="@style/text_15_wrap_black"
                android:layout_centerVertical="true"
                android:text="房产编号:" />

            <TextView
                android:id="@+id/tv_housing_detail_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/main_color"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_housing_detail_classify"
            style="@style/text_15_wrap_black"
            android:layout_marginTop="@dimen/dp_15"
            android:text="房产分类" />

        <TextView
            android:id="@+id/tv_housing_detail_name"
            style="@style/text_15_wrap_black"
            android:layout_marginTop="@dimen/dp_15"
            android:text="房产名称" />

        <TextView
            android:id="@+id/tv_housing_detail_location"
            style="@style/text_15_wrap_black"
            android:layout_marginTop="@dimen/dp_15"
            android:text="房产位置" />

        <TextView
            android:id="@+id/tv_housing_detail_area"
            style="@style/text_15_wrap_black"
            android:layout_marginTop="@dimen/dp_15"
            android:text="建筑面积" />

        <TextView
            android:id="@+id/tv_housing_detail_use_plan"
            style="@style/text_15_wrap_black"
            android:layout_marginTop="@dimen/dp_15"
            android:text="用途规划" />

        <TextView
            android:id="@+id/tv_housing_detail_upset_rent"
            style="@style/text_15_wrap_black"
            android:layout_marginTop="@dimen/dp_15"
            android:text="租金底价" />

        <TextView
            android:id="@+id/tv_housing_detail_founder"
            style="@style/text_15_wrap_black"
            android:layout_marginTop="@dimen/dp_15"
            android:text="创建人" />

        <TextView
            android:id="@+id/tv_housing_detail_create_time"
            style="@style/text_15_wrap_black"
            android:layout_marginTop="@dimen/dp_15"
            android:text="创建时间" />

        <TextView
            android:id="@+id/tv_housing_detail_last_modifier"
            style="@style/text_15_wrap_black"
            android:layout_marginTop="@dimen/dp_15"
            android:text="最后修改人: xxx" />

        <TextView
            android:id="@+id/tv_housing_detail_last_modify_time"
            style="@style/text_15_wrap_black"
            android:layout_marginTop="@dimen/dp_15"
            android:text="最后修改时间: " />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/fl_house_detail_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_fill_white_top_line"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10"
        android:visibility="gone">

        <Button
            android:id="@+id/bt_housing_detail_see"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="查看出租详情" />
    </FrameLayout>
</RelativeLayout>