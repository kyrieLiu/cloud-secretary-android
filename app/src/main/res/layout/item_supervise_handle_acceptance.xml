<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_fill_rectangle_white_10"
        android:paddingTop="@dimen/dp_15"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_15">

        <View
            android:id="@+id/view_item_supervise_handle_warn"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/shape_red_circle"></View>

        <LinearLayout
            android:id="@+id/ll_item_supervise_handle_title_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_supervise_handle_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="2019年"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/tv_item_supervise_handle_belongProject"
                style="@style/text_14_wrap_gray"
                android:layout_marginTop="@dimen/dp_10"
                android:text="所属项目" />

            <TextView
                android:id="@+id/tv_item_supervise_handle_operationUnit"
                style="@style/text_14_wrap_gray"
                android:layout_marginTop="@dimen/dp_10"
                android:text="经营单位" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_supervise_handle_planTime"
                    style="@style/text_14_wrap_gray"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="责任人" />

                <TextView
                    android:id="@+id/tv_item_supervise_handle_status"
                    style="@style/text_14_wrap_gray"
                    android:text="验收通过"
                    android:textColor="@color/main_color" />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>