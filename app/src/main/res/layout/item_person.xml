<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_dynamic_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_fill_rectangle_white_press"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_person_head"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:visibility="gone"
            android:src="@mipmap/default_head_image"></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李磊书记"
                android:textSize="@dimen/sp_16"></TextView>

            <TextView
                android:id="@+id/tv_person_num"
                style="@style/text_14_wrap_gray"
                android:text="粉丝数: 120"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_attention_status"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            android:background="@drawable/selector_fill_rectangle_blue_4"
            android:text="取消关注"
            ></TextView>

    </LinearLayout>

</LinearLayout>


