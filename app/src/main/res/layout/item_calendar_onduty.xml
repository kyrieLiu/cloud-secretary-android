<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/rl_item_onduty_calendar_bg"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/tv_item_onduty_calendar_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/dp_5"
            android:text="1"
            android:textColor="@color/main_text_color"
            android:textSize="16sp" />

        <View
            android:id="@+id/view_item_onduty_calendar_point"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_below="@+id/tv_item_onduty_calendar_date"
            android:layout_centerHorizontal="true"
            android:background="@drawable/selector_circle_blue" />
    </RelativeLayout>
</LinearLayout>
