<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light_color"
    android:orientation="vertical"
    tools:context=".function.mine.collect.CollectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/icon_back_white" />

        <LinearLayout
            android:id="@+id/ll_property_select_park"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_margin="@dimen/dp_15"
            android:layout_weight="1"
            android:background="@drawable/shape_fill_rectangle_white_21"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_propperty_search_content"
                style="@style/text_14_wrap_black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="全部" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@mipmap/down_arrow" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_property_search"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/ic_search" />
    </LinearLayout>


    <com.jingkai.asset.widget.xrecycler.XRecyclerView
        android:id="@+id/rv_property_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.jingkai.asset.widget.xrecycler.XRecyclerView>

</LinearLayout>