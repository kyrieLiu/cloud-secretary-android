<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />


    <com.luck.cloud.widget.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_fill_white_only_bottom_gray"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    style="@style/text_16_wrap_theme"
                    android:text="举办单位:" />

                <TextView
                    android:id="@+id/tv_unit"
                    style="@style/text_16_wrap_gray"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="中软国际" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_fill_white_only_bottom_gray"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    style="@style/text_16_wrap_theme"
                    android:text="负责人:" />

                <TextView
                    android:id="@+id/tv_principle"
                    style="@style/text_16_wrap_gray"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="刘先生" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_fill_white_only_bottom_gray"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    style="@style/text_16_wrap_theme"
                    android:text="联系方式:" />

                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/text_16_wrap_gray"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="15001121187" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_fill_white_only_bottom_gray"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    style="@style/text_16_wrap_theme"
                    android:text="活动地点:" />

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/text_16_wrap_gray"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="北京" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_fill_white_only_bottom_gray"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    style="@style/text_16_wrap_theme"
                    android:text="活动详情:" />

                <TextView
                    android:id="@+id/tv_content"
                    style="@style/text_16_wrap_gray"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="暑假支教活动" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="留言: "
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/dp_30"
                ></TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_contour_grey_10"
                ></EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_30"
                >
                <Button
                    android:id="@+id/bt_commit"
                    style="@style/button_style"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_42"
                    android:text="提交留言" />
                <Button
                    android:id="@+id/bt_apply"
                    style="@style/button_style"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_height="@dimen/dp_42"
                    android:text="我要报名" />
            </LinearLayout>

        </LinearLayout>
    </com.luck.cloud.widget.MyScrollView>

</LinearLayout>