<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />


    <com.luck.cloud.widget.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"

            android:orientation="vertical">


            <!--头像-->
            <LinearLayout
                android:id="@+id/ll_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_fill_white_only_bottom_gray"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10">

                    <TextView
                        style="@style/tv_main_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="头像" />

                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/iv_avatar_arrow"
                        android:layout_toLeftOf="@+id/iv_avatar_arrow"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/default_head_image" />

                    <ImageView
                        android:id="@+id/iv_avatar_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:src="@mipmap/icon_right" />

                </RelativeLayout>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_personal_phone_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_fill_white_only_bottom_gray"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    style="@style/text_16_wrap_theme"
                    android:layout_centerVertical="true"
                    android:text="手机号" />

                <TextView
                    android:id="@+id/tv_personal_phone"
                    style="@style/text_16_wrap_gray"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/icon_right"
                    android:drawablePadding="6dp"
                    android:text="绑定手机号" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_fill_white_only_bottom_gray"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    style="@style/text_16_wrap_theme"
                    android:layout_centerVertical="true"
                    android:text="用户名" />

                <TextView
                    android:id="@+id/tv_personal_username"
                    style="@style/text_16_wrap_gray"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_personal_forth_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_fill_white_only_bottom_gray"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_personal_forth_title"
                    style="@style/text_16_wrap_theme"
                    android:layout_centerVertical="true"
                    android:text="员工姓名" />

                <TextView
                    android:id="@+id/tv_personal_forth"
                    style="@style/text_16_wrap_gray"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/tv_personal_forth_title"
                    android:gravity="right" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_personal_five_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_fill_white_only_bottom_gray"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_personal_five_title"
                    style="@style/text_16_wrap_theme"
                    android:layout_centerVertical="true"
                    android:text="地址" />

                <TextView
                    android:id="@+id/tv_personal_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/tv_personal_five_title"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/gray_text_color"
                    android:textSize="@dimen/sp_16" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_personal_six_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_fill_white_only_bottom_gray"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_personal_six_title"
                    style="@style/text_16_wrap_theme"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="承租人" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_personal_six_title">

                    <TextView
                        android:id="@+id/tv_personal_six"
                        style="@style/text_16_wrap_gray"
                        android:layout_alignParentRight="true"
                        android:gravity="right" />
                </RelativeLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_personal_seven_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_fill_white_only_bottom_gray"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_personal_seven_title"
                    style="@style/text_16_wrap_theme"
                    android:layout_centerVertical="true"
                    android:text="与承租人的关系" />

                <TextView
                    android:id="@+id/tv_personal_seven"
                    style="@style/text_16_wrap_gray"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_personal_seven_title"
                    android:gravity="right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_personal_department_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_fill_white_only_bottom_gray"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_personal_data_dept_title"
                    style="@style/text_16_wrap_theme"
                    android:layout_centerVertical="true"
                    android:text="部门" />

                <TextView
                    android:id="@+id/tv_personal_department"
                    style="@style/text_16_wrap_gray"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_personal_data_dept_title"
                    android:gravity="right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_personal_company_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_fill_white_only_bottom_gray"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_personal_company_title"
                    style="@style/text_16_wrap_theme"
                    android:layout_centerVertical="true"
                    android:text="公司" />

                <TextView
                    android:id="@+id/tv_personal_company"
                    style="@style/text_16_wrap_gray"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_personal_company_title"
                    android:gravity="right" />
            </RelativeLayout>

        </LinearLayout>
    </com.luck.cloud.widget.MyScrollView>

</LinearLayout>