<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".function.mine.personal.PersonalDataActivity">

    <include layout="@layout/layout_title"></include>

    <LinearLayout
        android:id="@+id/ll_personal_data_head_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/shape_fill_white_only_bottom_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text_16_wrap_black"
            android:layout_weight="1"
            android:text="头像" />

        <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            app:cardCornerRadius="40dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true">

            <ImageView
                android:id="@+id/iv_personal_data_head_protrait"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </android.support.v7.widget.CardView>

        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/icon_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_personal_data_name_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/shape_fill_white_only_bottom_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text_16_wrap_black"
            android:layout_weight="1"
            android:text="姓名" />

        <TextView
            android:id="@+id/tv_personal_data_name"
            style="@style/text_16_wrap_grey"
            android:layout_marginRight="@dimen/dp_15" />

        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/icon_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_personal_data_phone_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/shape_fill_white_only_bottom_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text_16_wrap_black"
            android:layout_weight="1"
            android:text="手机号" />

        <TextView
            android:id="@+id/tv_personal_data_phone"
            style="@style/text_16_wrap_grey"
            android:layout_marginRight="@dimen/dp_15" />


    </LinearLayout>
</LinearLayout>