<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".function.repair.activity.RepairProjectDetailActivity">

    <include layout="@layout/layout_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_light_color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_20">


                <TextView
                    android:id="@+id/tv_supervise_detail_task_name"
                    style="@style/text_15_wrap_black"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:text="任务名称: " />

                <TextView
                    android:id="@+id/tv_supervise_detail_create_time"
                    style="@style/text_15_wrap_black"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="创建时间: " />

                <TextView
                    android:id="@+id/tv_supervise_detail_complete_time"
                    style="@style/text_15_wrap_black"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="完成时限: " />

                <TextView
                    android:id="@+id/tv_supervise_detail_source"
                    style="@style/text_15_wrap_black"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="工单来源: "
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_supervise_detail_belong_project"
                    style="@style/text_15_wrap_black"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="所属项目:" />

                <TextView
                    android:id="@+id/tv_supervise_detail_operate_unit"
                    style="@style/text_15_wrap_black"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="经营单位: " />

                <LinearLayout
                    android:id="@+id/ll_supervise_detail_assets_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_supervise_detail_location"
                        style="@style/text_15_wrap_black"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="资产位置:" />

                    <TextView
                        android:id="@+id/tv_supervise_detail_classify"
                        style="@style/text_15_wrap_black"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="资产分类:" />

                    <TextView
                        android:id="@+id/tv_supervise_detail_assets_name"
                        style="@style/text_15_wrap_black"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="资产名称:" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_supervise_detail_device"
                    style="@style/text_15_wrap_black"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="设备名称:" />

                <TextView
                    android:id="@+id/tv_supervise_detail_initiator"
                    style="@style/text_15_wrap_black"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="发起人:" />

                <TextView
                    android:id="@+id/tv_supervise_detail_charge_person"
                    style="@style/text_15_wrap_black"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="责任人:" />

                <TextView
                    android:id="@+id/tv_supervise_detail_receive_person"
                    style="@style/text_15_wrap_black"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="接收人:" />

                <TextView
                    android:id="@+id/tv_supervise_detail_acceptor"
                    style="@style/text_15_wrap_black"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="验收人:" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_20">

                <com.jingkai.asset.widget.view.CustomTopView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="完成标准"
                    app:title_bold="true"></com.jingkai.asset.widget.view.CustomTopView>

                <TextView
                    android:id="@+id/tv_supervise_detail_standard_content"
                    style="@style/text_15_wrap_black"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_15"
                    android:letterSpacing="0.05"
                    android:lineSpacingExtra="5dp"></TextView>

                <TextView
                    android:id="@+id/tv_supervise_detail_end_time"
                    style="@style/text_15_wrap_black"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"></TextView>

                <TextView
                    android:id="@+id/tv_supervise_detail_file_title"
                    style="@style/text_16_wrap_black"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="附件:" />

                <com.jingkai.asset.widget.MeasureRecyclerView
                    android:id="@+id/mrv_supervise_examine_detail_file"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"></com.jingkai.asset.widget.MeasureRecyclerView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_supervise_handle_complete_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_20"
                android:visibility="gone">

                <com.jingkai.asset.widget.view.CustomTopView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="督查督办完成情况"
                    app:title_bold="true"></com.jingkai.asset.widget.view.CustomTopView>


                <TextView
                    style="@style/text_16_wrap_black"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="反馈意见:" />

                <TextView
                    android:id="@+id/tv_supervise_detail_feedback_content"
                    style="@style/text_15_wrap_black"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:letterSpacing="0.05"
                    android:lineSpacingExtra="5dp"></TextView>

                <TextView
                    android:id="@+id/tv_supervise_examine_file_title"
                    style="@style/text_16_wrap_black"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="附件:" />

                <com.jingkai.asset.widget.MeasureRecyclerView
                    android:id="@+id/mrv_supervise_examine_detail_feedback_file"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"></com.jingkai.asset.widget.MeasureRecyclerView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_20"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_20">

                <com.jingkai.asset.widget.view.CustomTopView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    app:title="督办状态"></com.jingkai.asset.widget.view.CustomTopView>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_repair_detail_check_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"></android.support.v7.widget.RecyclerView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_20">

                <RelativeLayout
                    android:id="@+id/rl_repair_project_process_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">

                    <com.jingkai.asset.widget.view.CustomTopView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        app:right_icon="@mipmap/icon_right"
                        app:right_menu="详情"
                        app:title="操作过程"></com.jingkai.asset.widget.view.CustomTopView>

                </RelativeLayout>


                <com.jingkai.asset.widget.MeasureRecyclerView
                    android:id="@+id/rv_repair_detail_check_process"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"></com.jingkai.asset.widget.MeasureRecyclerView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_supervise_handle_acceptance_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_20"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_20"
                android:visibility="gone">

                <com.jingkai.asset.widget.view.CustomTopView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    app:title="验收意见"></com.jingkai.asset.widget.view.CustomTopView>


                <com.jingkai.asset.widget.MyEditText
                    android:id="@+id/et_supervise_detail_opinion"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_125"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/shape_fill_rectangle_grey_4"
                    android:gravity="top"
                    android:hint="请输入您的意见，需要在255个字符内哦……"
                    android:padding="@dimen/dp_5"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_supervise_handle_button_parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:visibility="gone">

                <Button
                    android:id="@+id/bt_supervise_detail_unpass"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/selector_fill_rectangle_blue_4"
                    android:text="验收驳回"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />

                <Button
                    android:id="@+id/bt_supervise_detail_pass"
                    style="@style/button_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:text="验收通过" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>