<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_wait_done_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_20">

    <TextView
        android:id="@+id/tv_item_wait_done_name"
        style="@style/text_15_wrap_black"
        android:layout_marginTop="@dimen/dp_20"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="2019年度楼宇" />

    <TextView
        android:id="@+id/tv_item_wait_done_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_wait_done_name"
        android:layout_marginTop="@dimen/dp_15"
        android:text="修缮项目"
        android:textColor="#0281E6" />

    <TextView
        android:id="@+id/tv_item_wait_done_time"
        style="@style/text_12_wrap_gray"
        android:layout_alignTop="@id/tv_item_wait_done_type"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/tv_item_wait_done_type"
        android:text="2019-03-14 10:13" />

    <TextView
        android:id="@+id/tv_item_wait_done_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_item_wait_done_type"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:textSize="@dimen/sp_13"
        android:textColor="#13AE85"
        android:text="待预审" />


</RelativeLayout>