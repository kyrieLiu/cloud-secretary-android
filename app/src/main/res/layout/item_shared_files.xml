<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_wait_done_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_15">

    <TextView
        android:id="@+id/tv_shared_file_name"
        style="@style/text_15_wrap_black"
        android:layout_marginTop="@dimen/dp_15"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="2019年度楼宇" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_shared_file_name"
        android:layout_marginTop="@dimen/dp_7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_shared_file_time"
            style="@style/text_12_wrap_gray"
            android:layout_weight="1"
            android:text="2019-03-14 10:13" />

        <TextView
            android:id="@+id/tv_shared_file_type"
            style="@style/text_12_wrap_gray" />
    </LinearLayout>


</RelativeLayout>