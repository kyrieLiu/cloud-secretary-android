<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/shape_fill_rectangle_white_10"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_dialog_select_garden_close"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/close_icon" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_dialog_select_garden"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"></android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/bt_select_garden_confirm"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="确定" />

    </LinearLayout>
</RelativeLayout>