<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_dynamic_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_fill_rectangle_white_press"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_dynamic_head"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@mipmap/default_head_image"></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dynamic_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李磊书记"
                android:textSize="@dimen/sp_16"></TextView>

            <TextView
                android:id="@+id/tv_dynamic_time"
                style="@style/text_14_wrap_gray"
                android:text="2019-03-03 13:30:32"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_dynamic_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 关注"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:textColor="#FFCB02"></TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dynamic_text"
        style="@style/text_16_wrap_black"
        android:text="文本信息"
        android:layout_marginTop="@dimen/dp_10"
        ></TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_dynamic_pictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:layout_marginTop="@dimen/dp_10"
        ></androidx.recyclerview.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/rl_video_parent"
        android:layout_width="match_parent"
        android:layout_height="350dp">
        <ImageView
            android:id="@+id/iv_dynamic_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/banner1"
            ></ImageView>
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/video_play"
            android:layout_centerInParent="true"
            android:alpha="0.6"
            ></ImageView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_like_statistic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_5"
        >
        <ImageView
            android:id="@+id/iv_dynamic_like_statistic"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            ></ImageView>
        <TextView
            android:id="@+id/tv_dynamic_like_statistic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_dynamic_comment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        ></androidx.recyclerview.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_color"
        android:layout_marginTop="@dimen/dp_10"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_dynamic_like"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/selector_fill_rectangle_white_4"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            >
            <ImageView
                android:id="@+id/iv_dynamic_like"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                ></ImageView>
            <TextView
                android:id="@+id/tv_dynamic_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/main_text_color"
                android:text="点赞"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_dynamic_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/selector_fill_rectangle_white_4"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            >
            <ImageView
                android:id="@+id/iv_dynamic_comment"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/main_text_color"
                android:text="评论"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_dynamic_transmit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/selector_fill_rectangle_white_4"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            >
            <ImageView
                android:id="@+id/iv_dynamic_transmit"
                android:layout_width="@dimen/dp_23"
                android:layout_height="@dimen/dp_23"
                ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/main_text_color"
                android:text="转发"></TextView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>


