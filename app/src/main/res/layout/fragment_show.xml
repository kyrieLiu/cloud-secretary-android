<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@color/main_color"
        android:paddingTop="@dimen/dp_40">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_60"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:text="展示"
            android:textSize="@dimen/sp_20" />
    </RelativeLayout>
        <ImageView
            android:id="@+id/show_add"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:src="@mipmap/add" />
    </RelativeLayout>

    <com.jingkai.asset.widget.mark_tablayout.MarkTabLayout
        android:id="@+id/mtl_science_management"
        style="@style/mark_tablayout_view_style"
        app:fTabIndicatorFixedWidth="@dimen/dp_90"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_color"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        >/</LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_science_management"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>