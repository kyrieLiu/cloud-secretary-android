<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_wait_done_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_fill_rectangle_white_press"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_15">

    <TextView
        android:id="@+id/tv_foot_name"
        style="@style/text_15_wrap_black"
        android:layout_marginTop="@dimen/dp_15"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="加强乡村教育投资,增加就业机会" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_foot_name"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_foot_time"
            style="@style/text_12_wrap_gray"
            android:text="2020-03-14 10:13" />

    </LinearLayout>




</RelativeLayout>