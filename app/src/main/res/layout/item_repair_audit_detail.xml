<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_20">

    <TextView
        android:id="@+id/tv_item_repair_audit_detail_stage"
        style="@style/text_15_wrap_black"
        android:text="操作:" />

    <TextView
        android:id="@+id/tv_item_repair_audit_detail_audiApplyPerson"
        style="@style/text_15_wrap_black"
        android:layout_marginTop="@dimen/dp_10"
        android:text="操作人:" />

    <TextView
        android:id="@+id/tv_item_repair_audit_detail_commitApplyTime"
        style="@style/text_15_wrap_black"
        android:layout_marginTop="@dimen/dp_10"
        android:text="提交时间:" />


    <TextView
        android:id="@+id/tv_item_repair_audit_detail_remark_title"
        style="@style/text_16_wrap_black"
        android:layout_marginTop="@dimen/dp_10"
        android:text="预审意见:" />

    <TextView
        android:id="@+id/tv_item_repair_audit_detail_remark"
        style="@style/text_15_wrap_black"
        android:layout_marginTop="@dimen/dp_10"
        android:text="" />

    <TextView
        android:id="@+id/tv_item_repair_audit_detail_file_title"
        style="@style/text_16_wrap_black"
        android:layout_marginTop="@dimen/dp_15"
        android:text="工程资料:" />

    <com.jingkai.asset.widget.MeasureRecyclerView
        android:id="@+id/mrv_item_repair_audit_detail_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"></com.jingkai.asset.widget.MeasureRecyclerView>
    <TextView
        android:id="@+id/tv_item_repair_audit_detail_file_settle_title"
        style="@style/text_16_wrap_black"
        android:layout_marginTop="@dimen/dp_15"
        android:visibility="gone"
        android:text="结算资料:" />

    <com.jingkai.asset.widget.MeasureRecyclerView
        android:id="@+id/mrv_item_repair_audit_detail_file_settle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dp_10"></com.jingkai.asset.widget.MeasureRecyclerView>
</LinearLayout>