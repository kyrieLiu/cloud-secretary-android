<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_fill_rectangle_white_10"
        android:padding="@dimen/dp_15">


        <TextView
            android:id="@+id/tv_item_supervise_handle_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@id/tv_item_supervise_handle_status"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="2019年"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tv_item_supervise_handle_belongProject"
            style="@style/text_14_wrap_gray"
            android:layout_below="@id/tv_item_supervise_handle_title"
            android:layout_marginTop="@dimen/dp_10"
            android:text="所属项目" />

        <TextView
            android:id="@+id/tv_item_supervise_handle_operationUnit"
            style="@style/text_14_wrap_gray"
            android:layout_below="@id/tv_item_supervise_handle_belongProject"
            android:layout_marginTop="@dimen/dp_10"
            android:text="经营单位" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_supervise_handle_operationUnit"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_supervise_charge_person"
                style="@style/text_14_wrap_gray"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="责任人" />

            <TextView
                android:id="@+id/tv_item_supervise_handle_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待反馈"
                android:textColor="@color/main_color" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>