<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_video_parent"
    android:layout_width="match_parent"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="@dimen/dp_8"
    android:layout_height="250dp">

    <ImageView
        android:id="@+id/iv_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/banner3"></ImageView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_video_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内蒙古通辽市科尔沁区丰田镇养殖中心"
            android:textColor="@color/white"
            android:maxLines="2"
            android:ellipsize="end"
            ></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerInParent="true"
                android:src="@mipmap/video_play"></ImageView>
            <TextView
                android:id="@+id/tv_video_play_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:visibility="gone"
                android:textColor="@color/white"
                ></TextView>
            <TextView
                android:id="@+id/tv_video_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2020-05-04"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:gravity="center"
                ></TextView>
            <ImageView
                android:id="@+id/head_image"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerInParent="true"
                android:src="@mipmap/default_head_image"></ImageView>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>


