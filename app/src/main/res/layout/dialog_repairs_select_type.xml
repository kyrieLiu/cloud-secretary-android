<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_dialog_repairs_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/main_text_color"
            android:text="选择行业" />

        <ImageView
            android:id="@+id/iv_dialog_repairs_type_colose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@mipmap/close_icon" />

    </RelativeLayout>
    <Button
        android:id="@+id/bt_dialog_repairs_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        style="@style/button_style"
        android:layout_alignParentBottom="true"
        android:text="确定"
        android:layout_margin="@dimen/dp_20"/>
    <com.luck.cloud.widget.PickerView
        android:id="@+id/pv_dialog_repairs_type"
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_dialog_repairs_title"
        android:layout_above="@+id/bt_dialog_repairs_confirm"
        android:layout_height="match_parent" />
</RelativeLayout>