<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/selector_fill_rectangle_white_press"
    android:layout_height="@dimen/dp_60">
   <ImageView
       android:id="@+id/iv_mine_menu_icon"
       android:layout_width="@dimen/dp_25"
       android:layout_height="@dimen/dp_25"
       android:src="@mipmap/mine_active"
       android:layout_marginStart="@dimen/dp_20"
       >
   </ImageView>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginStart="@dimen/dp_10"
           android:background="@drawable/selector_fill_rectangle_w_b">

          <TextView
              android:id="@+id/tv_mine_menu_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="我的发布"
              android:textColor="@color/black"
              android:textSize="@dimen/sp_16"
              android:layout_centerVertical="true" />

          <ImageView
              android:id="@+id/iv_mine_menu_right"
              android:layout_width="@dimen/dp_20"
              android:layout_height="@dimen/dp_20"
              android:src="@mipmap/icon_right"
              android:layout_marginRight="@dimen/dp_10"
              android:layout_alignParentEnd="true"
              android:layout_centerVertical="true" />
       </RelativeLayout>
</LinearLayout>