<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_fill_rectangle_white_10"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_15"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_pandect_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/pandect_cover_area"
        />

    <TextView
        android:id="@+id/iv_item_pandect_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="产业覆盖面积"
        android:textColor="@color/main_color"
        android:layout_marginTop="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/iv_item_pandect_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24个"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_5"
        />

</LinearLayout>