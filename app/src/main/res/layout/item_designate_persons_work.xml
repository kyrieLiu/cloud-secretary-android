<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_contour_top_bottom_gray"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_color" />

        <TextView
            android:id="@+id/tv_item_designate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/main_color"

            android:layout_marginTop="@dimen/dp_10"
            android:text="用户报修" />

        <TextView
            android:id="@+id/tv_item_designate_time"
            style="@style/text_14_wrap_black"
            android:layout_marginTop="@dimen/dp_10"
            android:text="维修时间" />

        <TextView
            android:id="@+id/tv_item_designate_name"
            style="@style/text_14_wrap_black"
            android:layout_marginTop="@dimen/dp_10"
            android:text="维修人员" />

        <TextView
            android:id="@+id/tv_item_designate_address"
            style="@style/text_14_wrap_black"
            android:layout_marginTop="@dimen/dp_10"
            android:text="维修地址" />

    </LinearLayout>
